<div class="d-flex justify-content-center">
   <div>
<%= render partial: "layouts/errors", locals: { object: @user} %>
<%= form_for @user do |f|%>
  <%= f.label :name%><br>
  <%= f.text_field :name%><br>
  <%= f.label :email %><br>
  <%= f.email_field :email %><br>
  <%= f.label :password %><br>
  <%= f.password_field :password%><br>
  
  <%= f.submit %>
<%end%>
</div>
</div>